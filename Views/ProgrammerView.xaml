<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalkulatorMAUI_MVVM.Views.ProgrammerView"
             xmlns:vm="clr-namespace:KalkulatorMAUI_MVVM.ViewModels">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="0" Grid.Row="0" HorizontalOptions="End" VerticalOptions="Center" 
            FontSize="34" FontAttributes="Bold" TextColor="White" Margin="0,-30,5,0" />

        <!--<VerticalStackLayout Grid.Row="1" Spacing="-15">
            <HorizontalStackLayout>
                <RadioButton Content="HEX" Style="{StaticResource SelectNumberSystem}"/>
                <Label Text="Value of Hex" Style="{StaticResource ValueOfSelectNumberSystem}"/>
            </HorizontalStackLayout>
            <RadioButton Content="DEC" Style="{StaticResource SelectNumberSystem}"/>
            <RadioButton Content="OCT" Style="{StaticResource SelectNumberSystem}"/>
            <RadioButton Content="BIN" Style="{StaticResource SelectNumberSystem}"/>
        </VerticalStackLayout>-->


        <Grid Grid.Row="4" HorizontalOptions="Center" VerticalOptions="End">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <HorizontalStackLayout Grid.Row="0" Spacing="5">
                <Button Style="{StaticResource AdvancedButton}" Text="A"/>
                <Button Style="{StaticResource AdvancedButton}" Text="B"/>
                <Button Style="{StaticResource AdvancedButton}" Text="C"/>
                <Button Style="{StaticResource AdvancedButton}" Text="D"/>
                <Button Style="{StaticResource AdvancedButton}" Text="E"/>
                <Button Style="{StaticResource AdvancedButton}" Text="F"/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text="&#x00AB;"/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text="&#x00BB;"/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text="("/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text=")"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="1" Spacing="5" Margin="0,10,0,0">
                <Button Style="{StaticResource AdvancedButton}" Text="%"/>
                <Button Style="{StaticResource AdvancedButton}" Text="รท"/>
                <Button Style="{StaticResource AdvancedButton}" Text="ร"/>
                <Button Style="{StaticResource AdvancedButton}" Text="-"/>
                <Button Style="{StaticResource AdvancedButton}" Text="+"/>
                <Button Style="{StaticResource AdvancedButton}" Text="+/-"/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text=","/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text="C"/>
                <Button Style="{StaticResource LightFunctionSmallButton}" Text="DEL"/>
                <Button Style="{StaticResource FunctionSmallButton}" Text="="/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="2" Spacing="5" Margin="0,20,0,0">
                <Button Style="{StaticResource NumberSmallButton}" Text="9"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="8"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="7"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="6"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="5"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="4"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="3"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="2"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="1"/>
                <Button Style="{StaticResource NumberSmallButton}" Text="0"/>
            </HorizontalStackLayout>

        </Grid>


    </Grid>
</ContentView>
