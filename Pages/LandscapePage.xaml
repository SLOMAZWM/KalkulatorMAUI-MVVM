<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalkulatorMAUI_MVVM.Pages.LandscapePage"
             xmlns:vm="clr-namespace:KalkulatorMAUI_MVVM.ViewModels"
             BackgroundColor="Black">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ImageButton Grid.Row="0" Margin="5,5,0,0" HorizontalOptions="Start" VerticalOptions="Start" Source="Resources/Images/menu.png" WidthRequest="25" HeightRequest="25"/>

        <Label Text="{Binding CalculatorViewModel.Display}" Grid.Row="0" HorizontalOptions="End" VerticalOptions="Center" 
           FontSize="34" FontAttributes="Bold" TextColor="White" Margin="0,0,65,0"/>

        <ContentView Content="{Binding CurrentView}" Grid.Row="1"/>
    </Grid>
</ContentPage>
